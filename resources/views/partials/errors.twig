{% if errors.all|length > 0 %}
    <div class="bg-red-500 text-white p-4 rounded mb-4">
        <strong>Hata!</strong>
        <div class="flex flex-col text-sm mt-4">
            {% for error in errors.all %}
                <span>{{ error }}</span>
            {% endfor %}
        </div>
    </div>
{% endif %}
