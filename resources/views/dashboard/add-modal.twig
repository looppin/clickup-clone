<div id="customer-edit-modal">
    <div class="absolute top-0 left-0 right-0 bottom-0 bg-gray-500 opacity-50 close-modal" ></div>
    <div class="absolute top-0 left-0 right-0 bottom-0 flex flex-row items-center justify-center">
        <div class="flex flex-col bg-white w-720px rounded-lg">
            <div class="h-16 px-4 flex flex-row items-center justify-between border-b border-fine-gray">
                <div class="flex flex-row items-center">
                    <span class="font-open-sans-bold text-gray-900">Task Ekle</span>
                </div>
                <div>
                    <button type="button" class="close-modal">
                        <svg class="stroke-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" className="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="px-4 py-10">



                    <form action="" id="customer-form" method="POST">

                        {{ csrf_field() }}

                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                                    Task Adı
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password" type="text" placeholder="Task İsmi">
                            </div>
                        </div>

                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                                    Task Açıklama
                                </label>
                                <textarea name="" id="" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" cols="30" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                                    Başlangıç Tarihi
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="date">
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                                    Bitiş Tarihi
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="date">
                            </div>
                        </div>

                        <div id="uploaded-media">

                        </div>

                    </form>
            </div>
            <div class="flex flex-row justify-end items-center p-4">

                <div class="flex flex-row flex-1 justify-between items-center mr-4">
                    <div>
                        <span class="flex flex-row items-center text-sm  animate-pulse hidden" id="customer-form-message">
                            <svg class="w-8 h-8 mr-2 text-green-500 success-svg hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <svg class="w-8 h-8 mr-2 text-red-500 error-svg hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <span class="message-slot"></span>
                        </span>
                    </div>
                    <span class="text-sm text-gray-500">ESC'ye basarak kapatabilirsiniz.</span>
                </div>

                <button class="py-3 px-6 flex-none text-white bg-button-blue rounded flex flex-row items-center justify-center" type="button" id="customer-form-submit" >
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span class="label">Kayıt Et</span>
                </button>

            </div>
        </div>
    </div>
</div>
